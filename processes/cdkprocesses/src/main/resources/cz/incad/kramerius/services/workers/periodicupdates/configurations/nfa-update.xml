<cdkprocess>

	<source-name>nfa</source-name>
	<name>nfa-update</name>
	<type>update</type>
	
	<timestamp>$timestamp.url$</timestamp>


    <threads>1</threads>

    <!-- Iteration part -->
    <iteratorFactory class="cz.inovatika.kramerius.services.iterators.factories.SolrIteratorFactory"></iteratorFactory>
    <iteration>
        <url>$iteration.url$</url>
        <endpoint>select</endpoint>


        <id>PID</id>
        <rows>1000</rows>

        <type>CURSOR</type>

        <user>$iteration.user$</user>
        <pass>$iteration.pass$</pass>
        
		<!--  timestamp field  -->
        <timestamp_field>modified_date</timestamp_field>

    </iteration>
	
    <threads>1</threads>


    <workerFactory class="cz.incad.kramerius.services.workers.replicate.copy.CDKCopySolrWorkerFactory"></workerFactory>
    <worker>
        <request>

            <endpoint>select</endpoint>
            <batchsize>70</batchsize>

            <url>$iteration.url$</url>

            <user>$iteration.user$</user>
            <pass>$iteration.pass$</pass>


            <composite.id>true</composite.id>
            <composite.root>root_pid</composite.root>
            <composite.child>PID</composite.child>


            <checkUrl>$destination.url$</checkUrl>
            <checkEndpoint>select</checkEndpoint>

            <!-- cdk source field -->
            <collection>cdk.collection</collection>

            <trasfrom>K7</trasfrom>

        </request>

        <destination>
            <url>$destination.url$/update</url>

            <!-- on index -->
            <onindex>
                <!-- remove from batch document -->
                <remove.dest.field>
                    <field name="collection"></field>
                </remove.dest.field>
                <!-- append to batch document -->
                <update.dest.field>
                    <field name="cdk.collection">nfa</field>
                    <field name="cdk.leader">nfa</field>
                </update.dest.field>
            </onindex>
            
            <!-- on update -->
            <onupdate>
                <fieldlist>PID root_pid dnnt-labels contains-dnnt-labels</fieldlist>
                <update.dest.field>
                   	<field name="cdk.collection" update="add-distinct">nfa</field>
                </update.dest.field>
            </onupdate>

        </destination>
    </worker>
</cdkprocess>
