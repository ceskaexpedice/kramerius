<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='gwtviewers'>
	<!-- Inherit the core Web Toolkit stuff.                        -->
	<inherits name='com.google.gwt.user.User' />

	<!-- Inherit the default GWT style sheet.  You can change       -->
	<!-- the theme of your GWT application by uncommenting          -->
	<!-- any one of the following lines.                            -->
	<!--  
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	-->
	<!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
	<!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

	<!-- Other module inherits                                      -->

	<!--  Inherits GWT effects -->
	<inherits name="org.adamtacy.GWTEffects"></inherits>
	<!-- SlideBar - Incubator -->
	<inherits name='com.google.gwt.widgetideas.WidgetIdeas' />
	<!--  
	<inherits name='com.google.gwt.gen2.logging.Logging' />
	-->

	<!-- Specify the app entry point class.                         -->
	<entry-point class='cz.incad.kramerius.gwtviewers.client.GwtViewers' />



	<replace-with class="cz.incad.kramerius.gwtviewers.client.slider.SliderFactory">
		<when-type-is class="cz.incad.kramerius.gwtviewers.client.slider.SliderFactory" />
	</replace-with>


	<!-- Fall through to this rule is the browser isn't IE or Mozilla -->
	<replace-with class="cz.incad.kramerius.gwtviewers.client.ModuloCreator">
		<when-type-is class="cz.incad.kramerius.gwtviewers.client.ModuloCreator" />
	</replace-with>

	<!-- Mozilla needs a different implementation due to issue #410 -->
	<replace-with class="cz.incad.kramerius.gwtviewers.client.MozillaModuloCreator">
		<when-type-is class="cz.incad.kramerius.gwtviewers.client.ModuloCreator" />
		<any>
			<when-property-is name="user.agent" value="gecko" />
			<when-property-is name="user.agent" value="gecko1_8" />
			<when-property-is name="user.agent" value="safari" />
			<when-property-is name="user.agent" value="opera" />
		</any>
	</replace-with>

	<!-- IE has a completely different popup implementation -->
	<replace-with class="cz.incad.kramerius.gwtviewers.client.IEModuloCreator">
		<when-type-is class="cz.incad.kramerius.gwtviewers.client.ModuloCreator" />
		<any>
			<when-property-is name="user.agent" value="ie6" />
			<when-property-is name="user.agent" value="ie7" />
			<when-property-is name="user.agent" value="ie8" />
		</any>
	</replace-with>

	 
	<!-- Specify the paths for translatable code                    -->
	<source path='client' />

</module>
